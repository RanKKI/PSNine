<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_list_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/adapter_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorCircleBorder"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/adapter_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/adapter_list_icon"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#399adc"/>

    <TextView
        android:id="@+id/adapter_list_reply"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_list_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/adapter_list_time"
        android:text="1 回复"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/adapter_list_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_list_name"
        android:layout_centerVertical="false"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/adapter_list_icon"
        android:maxLines="1"
        android:text="xxxx"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/adapter_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_list_icon"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#333333"/>
</RelativeLayout>