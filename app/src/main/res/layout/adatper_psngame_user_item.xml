<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/psngame_user_a_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/psngame_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#3498DB"/>

        <TextView
            android:id="@+id/psngame_user_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#333333"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/psngame_user_b_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/psngame_user_a_root"
        android:orientation="vertical">

        <TextView
            android:id="@+id/psngame_user_ft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首个杯"
            android:textAlignment="center"
            android:textColor="#B8C4CE"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/psngame_user_c_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/psngame_user_b_root"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/psngame_user_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最后杯"
            android:textAlignment="center"
            android:textColor="#B8C4CE"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/psngame_user_d_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/psngame_user_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="总耗时"
            android:textAlignment="center"
            android:textColor="#B8C4CE"/>
    </LinearLayout>
</RelativeLayout>